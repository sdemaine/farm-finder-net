{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "./",
      "paths": {
        "@components/*": ["./components/*"],
        "@lib/*": ["./lib/*"],
        "@hooks/*": ["./hooks/*"],
        "@services/*": ["./services/*"],
        "@state/*": ["./state/*"],
        "@assets/*": ["./assets/*"],
        "@app/*": ["./app/*"]
      }
    }
  }
  